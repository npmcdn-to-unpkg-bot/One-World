<script>
$(document).ready(function(){
  $('.carousel').carousel({
    dist:0,
    shift:0,
    padding:20,
  });
});
</script>

<div class="carousel">
  <% @listing.listing_images.each do |image|%>
    <a class="carousel-item">
      <%= image_tag(image.picture) %>
    </a>
  <% end %>
</div>
<div class="container">
  <div class="card-panel">
 <div class="row">
   <div class="col s6">
     <h4>
       <%= @listing.headline %> in <%= @listing.address.city %>
     </h4>
     <h5>
       <strong>Accommodates:</strong>
       <%= @listing.accommodates %>
     </h5>
     <h5>
       <strong>Hosted by:</strong>
       <%= link_to @listing.user.first_name, user_path(@listing.user_id)%>
     </h5>
     <div class="divider show-user-div"></div>
     <br></br>
     <div>
       <%= link_to "Contact #{@listing.user.first_name}", new_message_path(to: @listing.user.id), class: "btn-submit waves-effect waves-light btn" %>
       <% if current_user.role == 'Host' %>
          <p class="listing-edit">
            <%= link_to "Edit Listing", edit_listing_path(@listing.id), class: "btn-submit waves-effect waves-light btn" %> |
          </p>
        <% end %>
        <%= link_to 'Back', listings_path, class: "btn-submit waves-effect waves-light btn" %>
      </div>
   </div>
   <div class="col s6">
     <p>
       <%= @listing.description %>
     </p>
   </div>
 </div>
  </div>
</div>
